<div class="ui segment">
  <%= form_for(@state, html: { class: 'ui form' }) do |f| %>
    <%= render partial: 'layouts/errors_messages', locals: { model: @state } %>
        <div class="required eight wide field">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'somenteLetras', maxlength: 100  %>
    </div>
        <div class="required eight wide field">
      <%= f.label :initials %>
      <%= f.text_field :initials, class: 'somenteLetras', maxlength: 100  %>
    </div>
        <div class="actions">
      <%= link_to t('helpers.links.cancel'), states_path, class: 'ui button floated' %>
      <%= f.submit nil, class: 'ui green button' %>
    </div>
  <% end %>
</div>