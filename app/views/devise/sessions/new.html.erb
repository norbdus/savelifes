<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
     <i class="heartbeat icon"></i>
      <div class="content">
        <%= I18n.t("devise.titles.sign_in") %>
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class:"ui large form" }) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"E-mail address" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password" %>
          </div>
        </div>
        <%= f.submit I18n.t("devise.buttons.log_in"), class: 'ui fluid large teal submit button' %>
      </div>

      <div class="ui error message"></div>

    <% end %>

    <div class="ui message">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
